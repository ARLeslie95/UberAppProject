{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "version": "{{env `GIT_TAG_NAME`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami_filter" : {
      "filters": {
        "virtualization-type" : "hvm",
        "name": "ubuntu/images/hvm-ssd/*ubuntu-xenial-16.04-amd64-server-*",
        "root-device-type": "ebs"
                  },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "team-1-uber-project"
  }],
  "provisioners":[
    {
      "type": "chef-solo",
      "cookbook_paths": ["./cookbooks"],
      "install_command": "curl -L https://omnitruck.chef.io/install.sh | sudo bash -s -- -v 13.3.42",
      "run_list": ["node::default"]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["./cookbooks"],
      "install_command": "curl -L https://omnitruck.chef.io/install.sh | sudo bash -s -- -v 13.3.42",
      "run_list": ["python::default"]
    },
    {
      "type": "shell",
      "inline": ["mkdir /home/ubuntu/app"]
    },
    {
      "type": "file",
      "source": "app/",
      "destination": "/home/ubuntu/app"
    }]
}
